{
    "appenders": {
        "console": {
            "type": "console",
            "category": "console"
        },
        "debug": {
            "type": "dateFile",
            "pattern": " .yyyy-MM-dd",
            "category": "logDebug",
            "filename": "log/debug/debug.log"
        },
        "info": {
            "type": "dateFile",
            "pattern": " .yyyy-MM-dd",
            "category": "logInfo",
            "filename": "log/info/info.log"
        },
        "warn": {
            "type": "dateFile",
            "pattern": " .yyyy-MM-dd",
            "category": "logWarn",
            "filename": "log/warn/warn.log"
        },
        "error": {
            "type": "dateFile",
            "pattern": " .yyyy-MM-dd",
            "category": "logError",
            "filename": "log/error/error.log"
        }
    },
    "replaceConsole": true,
    "categories": {
        "default": { "appenders": ["info"], "level": "debug" },
        "logDebug": { "appenders": ["debug"], "level": "debug" },
        "logInfo": { "appenders": ["info"], "level": "info" },
        "logWarn": { "appenders": ["warn"], "level": "warn" },
        "logError": { "appenders": ["error"], "level": "error" }
    }
}
